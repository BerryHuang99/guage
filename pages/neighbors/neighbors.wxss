.sort-bar {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  color: #aaa;
  font-size: 35rpx;
  padding: 10rpx 0 0;
  border-bottom: 1px solid #eee;
}

.sort-button {
  padding: 0 20rpx;
}

.vertical-line {
  color: #ddd;
}

.checked {
  color: #29b58e;
  border-bottom: 5rpx solid #29b58e;
}
