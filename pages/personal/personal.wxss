/**personal.wxss**/
.container {
  background-color: #eee;
}

#personal-header {
  width: 100%;
  height: 300rpx;
  background-color: #29b58e;
  display: flex;
  color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  border-radius: 0 0 40rpx 40rpx;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: #fff 5rpx solid;
}

.name {
  font-weight: 400;
  margin: 10rpx;
}

.info {
  font-size: 25rpx;
  display: flex;
  justify-content: center;
}

.credit {
  margin-right: 20rpx;
}

.thumbs-up {
  margin-left: 20rpx;
}

.option-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx 30rpx;
  border-top: solid 1px #eee;
}

.wallet {
  margin: 20rpx 0;
}

.option-bar i {
  font-size:  40rpx;
}

.right {
  color: #ccc;
}

